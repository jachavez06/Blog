<div class="card">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs" id="mayTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#articles" role="tab">Articles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="summaries-tab" data-toggle="tab" href="#summaries" role="tab">Summaries</a>
            </li>
        </ul>
    </div>



    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="articles" role="tabpanel">
        
                <h4 class="card-title">Unpublished</h4>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <%= render 'articles/article_list', obj: @unpublished %>
                        <%= will_paginate(@unpublished, :renderer => PaginateHelper::LinkRenderer) %>
                    </div>
                </div>
                <%= link_to 'New', new_article_path(), class: "btn btn-success float-sm-right" %>
            </div>

            <div class="tab-pane" id="summaries" role="tabpanel">
                <div class="btn-toolbar mb-3 pull-right" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <%= link_to 'Analytics', blazer_path(), class: "btn btn-success", target: :_blank %>
                    </div>
                </div>
                <br>
                <h4 class="card-title">Last Week's New Users</h4>
                <%= line_chart charts_new_users_path %>
            </div>
        </div>
    </div>
</div>