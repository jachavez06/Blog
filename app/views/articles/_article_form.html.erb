
<%= render 'shared/errors', obj: @article %>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form" }) do |f| %>
            <div class="form-group"> 
                <div class="control-label col-sm-2"> 
                    <%= f.label :title %>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :title, class:"form-control", placeholder: "Title of Article", autofocus:true %>
                </div>
            </div>

            <div class="form-group"> 
                <div class="control-label col-sm-2"> 
                    <%= f.label :content%>
                </div>
                <div class="col-sm-10">
                    <%= f.text_area :content, rows:10, class:"form-control", placeholder: "Body of article", id: "article" %>
                    <script>
                        CKEDITOR.replace( 'article', {
                            extraPlugins: 'codesnippet',
                            codeSnippet_theme: 'rainbow'
                        });
                    </script>
                </div>
            </div>

            <hr>

            <h2>Meta-data</h2>
            <div class="form-group"> 
                <div class="control-label col-sm-2"> 
                    <%= f.label :Title %>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :meta_data_title, class:"form-control", placeholder: "Title", autofocus:true %>
                </div>
            </div>

            <div class="form-group"> 
                <div class="control-label col-sm-2"> 
                    <%= f.label :Description %>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :meta_data_description, class:"form-control", placeholder: "Description", autofocus:true %>
                </div>
            </div>

            <div class="form-group"> 
                <div class="control-label col-sm-2"> 
                    <%= f.label :Keywords %>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :meta_data_keywords, class:"form-control", placeholder: "Keywords", autofocus:true %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.submit class: 'btn btn-primary pull-right' %>
                </div>
            </div>

        <% end %>
    </div>
</div>