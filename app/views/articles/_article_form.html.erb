
<%= render 'shared/errors', obj: @article %>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form" }) do |f| %>
            <div class="form-group"> 
                <div class="control-label col-sm-1"> 
                    <%= f.label :title %>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :title, class:"form-control", placeholder: "Title of Article", autofocus:true %>
                </div>
            </div>

            <div class="form-group"> 
                <div class="control-label col-sm-1"> 
                    <%= f.label :content%>
                </div>
                <div class="col-sm-10">
                    <%= f.text_area :content, rows:10, class:"form-control", placeholder: "Body of article", id: "article" %>
                    <script>
                        CKEDITOR.replace( 'article', {
                            extraPlugins: 'codesnippet'
                        } );
                    </script>
                </div>
            </div>

            <div class="form-group"> 
                <div class="control-label col-sm-1"> 
                    <%= f.label :meta_data_title %>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :meta_data_title, class:"form-control", placeholder: "", autofocus:true %>
                </div>
            </div>

            <div class="form-group"> 
                <div class="control-label col-sm-1"> 
                    <%= f.label :meta_data_description %>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :meta_data_description, class:"form-control", placeholder: "", autofocus:true %>
                </div>
            </div>

            <div class="form-group"> 
                <div class="control-label col-sm-1"> 
                    <%= f.label :meta_data_keywords %>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :meta_data_keywords, class:"form-control", placeholder: "", autofocus:true %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-md' %>
                </div>
            </div>

        <% end %>
    </div>
</div>