<h1><%= title 'Listing Articles' %></h1>

    <div class="row">
        <div class="col-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <%= render 'article_list', obj: @articles %>
                        <%= will_paginate(@articles, :renderer => PaginateHelper::LinkRenderer) %>
                </div>
            </div>
        </div>
    </div>

    <% if admin? %>
        <div class="row">
            <div class="col-12">
                <div class="">
                    <%= link_to 'New', new_article_path(), class: "btn btn-success float-sm-right" %>
                </div>
            </div>
        </div>
        <h1>Unpublished</h1>
        <div class="row">
            <div class="col-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <%= render 'article_list', obj: @unpublished %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
