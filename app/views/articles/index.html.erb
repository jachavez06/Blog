<h1><%= title 'Articles' %></h1>

<div class="row">
    <div class="col-8">
        <div class="panel panel-default">
            <div class="panel-body">
                <%= render 'article_list', obj: @articles %>
                <%= will_paginate(@articles, :renderer => PaginateHelper::LinkRenderer) %>
            </div>
        </div>
    </div>
    <div class="col-3 offset-1">
        <div class="card">
            <div class="card-header text-center">
                Tags
            </div>
            <div class="card-block">
                <% @tags.each do |tag| %>
                   <%= link_to "#{tag.name}", articles_with_tags_path(tag.name) %>
                   (<%= tag.taggings_count %>)<br>
                <% end %>
            </div>
        </div>
    </div>
</div>
