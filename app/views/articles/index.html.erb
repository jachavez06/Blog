<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="">
                <h1 id="content"><%= title 'Listing Articles' %></h1>
            </div>
        </div>
    </div>
    <hr class="article-list-title-divider">
    <div class="row">
        <div class="col-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <%= render 'article_list', obj: @articles %>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="">
                <div class="digg_pagination" align="center">
                    <%= will_paginate %>
                </div>
            </div>
        </div>
    </div>

    <% if admin? %>
        <div class="row">
            <div class="col-12">
                <div class="">
                    <%= link_to 'New', new_article_path(), class: "btn btn-success float-sm-right" %>
                </div>
            </div>
        </div>
        <h1>Unpublished</h1>
        <div class="row">
            <div class="col-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <%= render 'article_list', obj: @unpublished %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>