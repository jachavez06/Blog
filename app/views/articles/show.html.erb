<div class="container">
    <div class="row">
        <!-- Article body -->
        <div class="col-10">
            <h1 id="article-show-title"><%= @article.title %></h1>
            <hr class="article-list-title-divider">
            <div id="article-show-body" class="">
                <%= raw rouge_markdown(@article.content.html_safe) %>
                
            </div>
            <div class="">
                <%= render "article_navigation" %>
            </div>
            <div id="article-url" value="<%= request.original_url %>" style="display:none"></div>
            <div id="article-id" value="<%= @article.id %>" style="display:none"></div>
            <hr>
            <div id="disqus_thread"></div>
        </div>

        <!-- Sidebar -->
        <div class="col-2">
            <div id="article-show-sidebar">
                <h3>About This Article:</h3>
                <div class="article-timestamps">
                    Published on: <%= @article.created_at.strftime('%B %d, %Y') %><br>
                    Updated on: <%= @article.updated_at.strftime('%B %d, %Y') %>
                </div>
            </div>
        </div>
    </div>

    <script>
        var disqus_config = function () {
            this.page.url = document.getElementById("article-url").getAttribute("value"); 
            this.page.identifier = document.getElementById("article-id").getAttribute("value");
        };

        (function() { // DON'T EDIT BELOW THIS LINE
            var d = document, s = d.createElement('script');
            s.src = 'https://jchavez-code.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
        })();
    </script>

    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
</div>