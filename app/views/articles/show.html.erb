<div class="row">
    <div class="col-xs-12">
        <div class="cliente">
            <h1><%= @article.title %></h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="cliente">
            Published on: <%= @article.created_at.strftime('%B %d, %Y') %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="cliente">
            Updated on: <%= @article.updated_at.strftime('%B %d, %Y') %>
        </div>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-xs-12">
        <div class="cliente">
            <%= @article.content.html_safe %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="cliente">
            <%= render "article_navigation" %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="cliente">
            <%= render "article_actions" %>
        </div>
    </div>
</div>
