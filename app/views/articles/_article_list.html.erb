<% obj.each do |article| %>
    <div class="lesson-card">
        <div class="row">
            <div class="col-12">
                <div class="article-index-title">
                    <%= link_to article.title, article_path(article) %>
                </div>
                <div class="article-index-body">
                    <%= article.meta_data_description %>
                </div>
            </div>
        </div>
    </div>
<hr style="width:auto;">
<% end %>